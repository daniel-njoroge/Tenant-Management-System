<Window x:Class="Tenant_Management_System.RegisterPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tenant_Management_System"
        mc:Ignorable="d"
        Title="RegisterPage" Height="450" Width="800">
    <Grid x:Name="register">
        <Border Width="320"
            Padding="25"
            Background="White"
            CornerRadius="15"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Effect="{DynamicResource DropShadow}" Height="415" Margin="240,0,0,0">
            <StackPanel VerticalAlignment="Center" Height="371">

                <TextBlock Text="Register"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="#FF984040"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,20" RenderTransformOrigin="0.471,1.042"/>

                <!-- Register Button -->

                <!-- Username -->
                <TextBlock Text="Username" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#333"/>
                <TextBox x:Name="usernameTbx"
                    Height="40"
                    Background="#f5f5f5"
                    BorderBrush="#ccc"
                    BorderThickness="1"
                    Padding="10,0"
                    FontSize="14"
                    VerticalContentAlignment="Center"/>

                <!-- Password -->
                <TextBlock Text="Password" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#333"/>
                <PasswordBox x:Name="passwordTbx"
                    Height="40"
                    Background="#f5f5f5"
                    BorderBrush="#ccc"
                    BorderThickness="1"
                    Padding="10,0"
                    FontSize="14"
                    VerticalContentAlignment="Center"/>

                <!-- Confirm Password -->
                <TextBlock Text="Confirm Password" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#333"/>
                <PasswordBox x:Name="confirmPasswordTbx"
                    Height="40"
                    Background="#f5f5f5"
                    BorderBrush="#ccc"
                    BorderThickness="1"
                    Padding="10,0"
                    FontSize="14"
                    Margin="0,0,0,25"
                    VerticalContentAlignment="Center"/>

                <TextBlock x:Name="registererrorLbl" Text="Error" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#FFC01616" HorizontalAlignment="Center"/>


                <Button x:Name="registerBtn"
                    Content="Register"
                    Height="40"
                    Background="#FF984040"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand" Click="registerBtn_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="10"
                                SnapsToDevicePixels="True">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Link to login page -->
                <TextBlock x:Name="loginLinkTxt" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15,10,0,0" Foreground="#0078d4" FontWeight="SemiBold" FontSize="14" Cursor="Hand" MouseDown="loginLinkTxt_Click"><Run Text="Back to Login"/></TextBlock>
            </StackPanel>
        </Border>

        <Grid.Resources>
            <DropShadowEffect x:Key="DropShadow" BlurRadius="10" ShadowDepth="4" Direction="270" Color="#888888" Opacity="0.4"/>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="589*"/>
            <ColumnDefinition Width="211*"/>
        </Grid.ColumnDefinitions>

    </Grid>
</Window>
