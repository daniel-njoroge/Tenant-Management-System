<Window x:Class="Tenant_Management_System.MainApp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tenant_Management_System"
        mc:Ignorable="d"
        Title="MainApp" Height="650" Width="1000" Background="#FFF5F5F5">

    <Window.Resources>
        <!-- Drop shadow effect -->
        <DropShadowEffect x:Key="DropShadow" BlurRadius="10" ShadowDepth="4" Direction="270" Color="#888888" Opacity="0.4"/>

        <!-- Sidebar button style -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF984040"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="10,10,10,0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFBA5F5F"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="51*"/>
            <ColumnDefinition Width="154*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar inside a border for padding and shadow -->
        <Border Background="White" Grid.Column="0" Margin="5,5,5,5" CornerRadius="10" Effect="{StaticResource DropShadow}">
            <StackPanel>
                <TextBlock x:Name="welcomeLbl" Text="Welcome, " FontWeight="Bold" Foreground="#FF984040" RenderTransformOrigin="0.5,1">
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform X="6" Y="15"/>
                        </TransformGroup>
                    </TextBlock.RenderTransform>
                </TextBlock>
                <TextBlock x:Name="dashboardLbl" Text="Dashboard" FontSize="18" FontWeight="Bold" Foreground="#FF984040" Height="26" RenderTransformOrigin="0.5,0">
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform X="10" Y="25"/>
                        </TransformGroup>
                    </TextBlock.RenderTransform>
                </TextBlock>
                <Button x:Name="apartmentsBtn" Content="Apartments" Style="{StaticResource SidebarButtonStyle}" Click="apartmentsBtn_Click" RenderTransformOrigin="0.5,0">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform Y="35"/>
                        </TransformGroup>
                    </Button.RenderTransform>
                </Button>
                <Button x:Name="tenantsBtn" Content="Tenants" Style="{StaticResource SidebarButtonStyle}" Click="tenantsBtn_Click" RenderTransformOrigin="0.5,1">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform Y="65"/>
                        </TransformGroup>
                    </Button.RenderTransform>
                </Button>
                <Button x:Name="roomsBtn" Content="Rooms" Style="{StaticResource SidebarButtonStyle}" Click="roomsBtn_Click" RenderTransformOrigin="0.5,1">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform Y="95"/>
                        </TransformGroup>
                    </Button.RenderTransform>
                </Button>
                <Button x:Name="settingsBtn" Content="Settings" Style="{StaticResource SidebarButtonStyle}" Click="settingsBtn_Click" RenderTransformOrigin="0,0.5">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform Y="120"/>
                        </TransformGroup>
                    </Button.RenderTransform>
                </Button>
                <TextBlock x:Name="logoutLinkTxt"
                   Foreground="#0078d4"
                   FontWeight="SemiBold"
                   FontSize="14"
                   Cursor="Hand"
                   MouseDown="logoutLinkTxt_Click" RenderTransformOrigin="0.5,0.5" Width="48" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform Y="130" X="0"/>
                        </TransformGroup>
                    </TextBlock.RenderTransform><Run Text="Logout"/></TextBlock>
            </StackPanel>
        </Border>

        <!-- Main content panels -->
        <Grid Grid.Column="1" x:Name="ContentPanel" Margin="20,20,20,20" Grid.ColumnSpan="2">
            <!-- Apartments Panel -->
            <Grid x:Name="apartmentsPnl" Visibility="Visible" HorizontalAlignment="Center" Width="770" Height="574" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                <Grid.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform X="-13"/>
                    </TransformGroup>
                </Grid.RenderTransform>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="250" />
                </Grid.ColumnDefinitions>

                <!-- Add Appartments button -->
                <Button x:Name="addNewApartmentBtn"
                    Content="Add New Appartment"
                    Height="30"
                    Width="149"
                    Style="{StaticResource SidebarButtonStyle}" RenderTransformOrigin="0.5,0.5" >
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform Y="-264" X="430"/>
                        </TransformGroup>
                    </Button.RenderTransform>
                </Button>

                <!-- Left side: Title and DataGrid -->
                <StackPanel Grid.Column="0" Margin="10">
                    <TextBlock Text="Apartments" FontSize="24" FontWeight="Bold" Foreground="#FF984040" Margin="0,0,0,10"/>
                    <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" AutoGenerateColumns="True" Margin="0" />
                </StackPanel>

                <!-- Right side: appartments delete /  edit to be adde later-->
                <StackPanel Visibility="Visible" Grid.Column="1" Margin="10,0,10,0" VerticalAlignment="Center" Height="554" >

                    <!-- Apartment No -->
                    <TextBlock Text="Apartment No:" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,5" RenderTransformOrigin="0,0.5" HorizontalAlignment="Left">
                        <TextBlock.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform X="0" Y="50"/>
                            </TransformGroup>
                        </TextBlock.RenderTransform>
                    </TextBlock>
                    <TextBox x:Name="apartmentNoTbx"
                         Background="#FFE5E5E5"
                         BorderBrush="#FF984040"
                         BorderThickness="1"
                         Padding="10,0"
                         FontSize="14"
                         Margin="0,0,0,10"
                         VerticalContentAlignment="Center" Width="150" HorizontalAlignment="Left" RenderTransformOrigin="0.5,0.5">
                        <TextBox.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform Y="50"/>
                            </TransformGroup>
                        </TextBox.RenderTransform>
                    </TextBox>

                    <!-- Apartment Name -->
                    <TextBlock Text="Apartment Name:" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,5" RenderTransformOrigin="0.5,1" HorizontalAlignment="Left">
                        <TextBlock.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform X="0" Y="80"/>
                            </TransformGroup>
                        </TextBlock.RenderTransform>
                    </TextBlock>
                    <TextBox x:Name="apartmentNameTbx"
                         Background="#FFE5E5E5"
                         BorderBrush="#FF984040"
                         BorderThickness="1"
                         Padding="10,0"
                         FontSize="14"
                         Margin="0,0,0,10"
                         VerticalContentAlignment="Center" Width="150" HorizontalAlignment="Left" RenderTransformOrigin="0.5,0.5">
                        <TextBox.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform Y="80"/>
                            </TransformGroup>
                        </TextBox.RenderTransform>
                    </TextBox>

                    <!-- Address -->
                    <TextBlock Text="Address:" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,5" RenderTransformOrigin="0.5,1" HorizontalAlignment="Left">
                        <TextBlock.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform X="0" Y="110"/>
                            </TransformGroup>
                        </TextBlock.RenderTransform>
                    </TextBlock>
                    <TextBox x:Name="addressTbx"
                         Background="#FFE5E5E5"
                         BorderBrush="#FF984040"
                         BorderThickness="1"
                         Padding="10,0"
                         FontSize="14"
                         Margin="0,0,0,10"
                         VerticalContentAlignment="Center" Width="150" HorizontalAlignment="Left" RenderTransformOrigin="0.5,1">
                        <TextBox.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform Y="109"/>
                            </TransformGroup>
                        </TextBox.RenderTransform>
                    </TextBox>

                    <!-- No of Rooms -->
                    <TextBlock Text="No of Rooms:" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,5" RenderTransformOrigin="0.5,1" HorizontalAlignment="Left">
                        <TextBlock.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform X="0" Y="140"/>
                            </TransformGroup>
                        </TextBlock.RenderTransform>
                    </TextBlock>
                    <TextBox x:Name="noOfRoomsTbx"
                         Background="#FFE5E5E5"
                         BorderBrush="#FF984040"
                         BorderThickness="1"
                         Padding="10,0"
                         FontSize="14"
                         Margin="0,0,0,20"
                         VerticalContentAlignment="Center" Width="150" HorizontalAlignment="Left" RenderTransformOrigin="0.5,0.5">
                        <TextBox.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform Y="140"/>
                            </TransformGroup>
                        </TextBox.RenderTransform>
                    </TextBox>

                    <!--Apartment Delete Button -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" RenderTransformOrigin="0.5,0.5">
                        <StackPanel.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform X="0" Y="170"/>
                            </TransformGroup>
                        </StackPanel.RenderTransform>
                        <Button x:Name="deleteBtn"
                            Content="Delete"
                            Height="30"
                            Width="70"
                            Margin="0,0,10,0"
                            Style="{StaticResource SidebarButtonStyle}" Background="#FF797474" />

                    </StackPanel>

                </StackPanel>

            </Grid>

            <!-- Tenants Panel -->
            <Grid x:Name="tenantsPnl" Visibility="collapsed">
                <Grid.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform X="-13"/>
                    </TransformGroup>
                </Grid.RenderTransform>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="250" />
                </Grid.ColumnDefinitions>

                <!-- Add Tenants button -->
                <Button x:Name="addNewTenantBtn"
                    Content="Add New Tenant"
                    Height="30"
                    Width="149"
                    Style="{StaticResource SidebarButtonStyle}" RenderTransformOrigin="0.5,0.5" >
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform Y="-264" X="430"/>
                        </TransformGroup>
                    </Button.RenderTransform>
                </Button>

                <!-- Left side: Title and DataGrid -->
                <StackPanel Grid.Column="0" Margin="10">
                    <TextBlock Text="Tenants" FontSize="24" FontWeight="Bold" Foreground="#FF984040" Margin="0,0,0,10"/>
                    <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" AutoGenerateColumns="True" Margin="0" />
                </StackPanel>

                <!-- Right side: Assign tenant a room-->
                <StackPanel Visibility="Visible" Grid.Column="1" Margin="10,0,10,0" VerticalAlignment="Center" Height="554" >

                    <!-- Tenant Number -->
                    <TextBlock x:Name="tenantNoLbl" Text="Tenant No:" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,5" RenderTransformOrigin="0,0.5" HorizontalAlignment="Left">
                        <TextBlock.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform X="0" Y="80"/>
                            </TransformGroup>
                        </TextBlock.RenderTransform>
                    </TextBlock>
                    <TextBox x:Name="tenantNoTbx"
                         Background="#FFE5E5E5"
                         BorderBrush="#FF984040"
                         BorderThickness="1"
                         Padding="10,0"
                         FontSize="14"
                         Margin="0,0,0,10"
                         VerticalContentAlignment="Center" Width="150" HorizontalAlignment="Left" RenderTransformOrigin="0.5,0.5">
                        <TextBox.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform Y="80"/>
                            </TransformGroup>
                        </TextBox.RenderTransform>
                    </TextBox>

                    <!-- Apartment Number -->
                    <TextBlock Text="Appartment No:" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,5" RenderTransformOrigin="0.5,1" HorizontalAlignment="Left">
                        <TextBlock.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform X="0" Y="110"/>
                            </TransformGroup>
                        </TextBlock.RenderTransform>
                    </TextBlock>
                    <TextBox
                         Background="#FFE5E5E5"
                         BorderBrush="#FF984040"
                         BorderThickness="1"
                         Padding="10,0"
                         FontSize="14"
                         Margin="0,0,0,10"
                         VerticalContentAlignment="Center" Width="150" HorizontalAlignment="Left" RenderTransformOrigin="0.5,0.5">
                        <TextBox.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform Y="110"/>
                            </TransformGroup>
                        </TextBox.RenderTransform>
                    </TextBox>

                    <!-- Room Number -->
                    <TextBlock Text="Room No:" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,5" RenderTransformOrigin="0.5,1" HorizontalAlignment="Left">
                        <TextBlock.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform X="0" Y="140"/>
                            </TransformGroup>
                        </TextBlock.RenderTransform>
                    </TextBlock>
                    <TextBox
                         Background="#FFE5E5E5"
                         BorderBrush="#FF984040"
                         BorderThickness="1"
                         Padding="10,0"
                         FontSize="14"
                         Margin="0,0,0,10"
                         VerticalContentAlignment="Center" Width="150" HorizontalAlignment="Left" RenderTransformOrigin="0.5,1">
                        <TextBox.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform Y="144"/>
                            </TransformGroup>
                        </TextBox.RenderTransform>
                    </TextBox>

                    <!-- Assign room button / edit to be added later -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" RenderTransformOrigin="0.5,0.5">
                        <StackPanel.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform X="0" Y="170"/>
                            </TransformGroup>
                        </StackPanel.RenderTransform>
                        <Button x:Name="assignRoomBtn"
                            Content="Assign Room"
                            Height="30"
                            Width="88"
                            Margin="0,0,10,0"
                            Style="{StaticResource SidebarButtonStyle}" Background="#FF797474" />

                    </StackPanel>
                    <TextBlock x:Name="tenantNoLbl_Copy" Text="Assign Tenant a Room" FontWeight="SemiBold" Foreground="#FF984040" RenderTransformOrigin="0.5,0.5" FontSize="14" TextDecorations="Underline">
                        <TextBlock.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform X="0" Y="-131"/>
                            </TransformGroup>
                        </TextBlock.RenderTransform>
                    </TextBlock>

                </StackPanel>
            </Grid>
            
            <!-- Rooms Panel -->
            <Grid x:Name="roomsPnl" Visibility="Collapsed" Height="394" VerticalAlignment="Center" HorizontalAlignment="Left" Width="580">
                <TextBlock Text="Rooms Panel" FontSize="24" FontWeight="Bold" Margin="216,171,216,181"/>
            </Grid>

            <!-- Settings Panel -->
            <Grid x:Name="settingsPnl" Visibility="collapsed" RenderTransformOrigin="0.5,0">

                <Grid x:Name="settingsOverview" Visibility="visible" Height="394" VerticalAlignment="Center" HorizontalAlignment="Left" Width="580">
                    <Button x:Name="editProfileBtn" Content="Edit Profile" Style="{StaticResource SidebarButtonStyle}"  RenderTransformOrigin="0.5,0" Margin="0,162,0,0" HorizontalAlignment="Center" Width="150" Height="40" VerticalAlignment="Top" Click="editProfileBtn_Click">
                        <Button.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform Y="35"/>
                            </TransformGroup>
                        </Button.RenderTransform>
                    </Button>
                    <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,37,0,0">
                        <!-- Border ellipse -->
                        <Ellipse Width="104" Height="104" Fill="Transparent" Stroke="#FF984040" StrokeThickness="2"/>

                        <!-- Circular image -->
                        <Image x:Name="profileImg"
                           Width="100" Height="100"
                           Stretch="UniformToFill"
                           IsEnabled="False"
                           Source="/Assets/defaultProfile.png">
                            <Image.Clip>
                                <EllipseGeometry Center="50,50" RadiusX="50" RadiusY="50"/>
                            </Image.Clip>
                        </Image>
                    </Grid>
                    <TextBlock x:Name="fullNameLbl" Text="Full Name" FontSize="18" FontWeight="Bold" Foreground="#FF984040" RenderTransformOrigin="0.5,0" Margin="0,121,0,0" Height="26" VerticalAlignment="Top" HorizontalAlignment="Center">
                        <TextBlock.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform X="0" Y="25"/>
                            </TransformGroup>
                        </TextBlock.RenderTransform>
                    </TextBlock>

                </Grid>

                <Grid x:Name="editProfile" Visibility="Collapsed" Height="394" VerticalAlignment="Center" HorizontalAlignment="Left" Width="580">
                    <TextBox x:Name="emailTbx"
                        Background="#FFE8E8E8"
                        BorderBrush="#FF512F2F"
                        BorderThickness="1"
                        Padding="10,0"
                        FontSize="14"
                        VerticalContentAlignment="Center" Margin="251,27,0,0" HorizontalAlignment="Left" Width="270" Height="40" VerticalAlignment="Top"/>
                    <TextBlock x:Name="emailLbl" Text="Email" FontWeight="SemiBold" Foreground="#333" Margin="0,39,452,0" RenderTransformOrigin="-0.541,0.626" HorizontalAlignment="Right" Width="39" Height="16" VerticalAlignment="Top"/>
                    <TextBlock x:Name="emailLbl_Copy" Text="Previous Password" FontWeight="SemiBold" Foreground="#333" Margin="0,98,381,0" RenderTransformOrigin="-0.541,0.626" HorizontalAlignment="Right" Width="110" Height="16" VerticalAlignment="Top"/>
                    <TextBlock x:Name="emailLbl_Copy1" Text="Confirm New Password" FontWeight="SemiBold" Foreground="#333" Margin="0,216,334,0" RenderTransformOrigin="-0.541,0.626" HorizontalAlignment="Right" Width="157" Height="16" VerticalAlignment="Top"/>
                    <Button x:Name="confirmEditBtn" Content="Edit" Style="{StaticResource SidebarButtonStyle}" RenderTransformOrigin="0.5,1" Margin="246,220,246,0" Height="40" VerticalAlignment="Top" Click="confirmEditBtn_Click">
                        <Button.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform Y="65"/>
                            </TransformGroup>
                        </Button.RenderTransform>
                    </Button>
                    <TextBlock x:Name="backToSettingsLinkTxt"
                        Foreground="#0078d4"
                        FontWeight="SemiBold"
                        FontSize="14"
                        Cursor="Hand"
                        MouseDown="backToSettingsLinkTxt_Click" RenderTransformOrigin="0.5,0.5" Margin="0,217,0,0" Height="19" VerticalAlignment="Top" HorizontalAlignment="Center" Width="114" Text="Back To Setttings">
                        <TextBlock.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform Y="130" X="0"/>
                            </TransformGroup>
                        </TextBlock.RenderTransform></TextBlock>
                    <PasswordBox x:Name="previousPasswordTbx"
                        Background="#FFE8E8E8"
                        BorderBrush="#FF512F2F"
                        BorderThickness="1"
                        Padding="10,0"
                        FontSize="14"
                        VerticalContentAlignment="Center" Margin="251,86,59,268"/>
                    <PasswordBox x:Name="confirmNewPasswordTbx"
                        Background="#FFE8E8E8"
                        BorderBrush="#FF512F2F"
                        BorderThickness="1"
                        Padding="10,0"
                        FontSize="14"
                        VerticalContentAlignment="Center" Margin="251,204,59,150"/>
                    <PasswordBox x:Name="newPasswordTbx"
                        Background="#FFE8E8E8"
                        BorderBrush="#FF512F2F"
                        BorderThickness="1"
                        Padding="10,0"
                        FontSize="14"
                        VerticalContentAlignment="Center" Margin="251,149,59,205"/>
                    <TextBlock x:Name="emailLbl_Copy2" Text="New Password" FontWeight="SemiBold" Foreground="#333" Margin="0,161,334,0" RenderTransformOrigin="-0.541,0.626" HorizontalAlignment="Right" Width="157" Height="16" VerticalAlignment="Top"/>
                    <TextBlock x:Name="statusLbl" Text="Error"
                        FontWeight="SemiBold"
                        Foreground="#FFC01616"
                           Margin="0,264,0,0" HorizontalAlignment="Center" Width="304" Height="15" VerticalAlignment="Top"/>

                </Grid>



            </Grid>


        </Grid>
    </Grid>
</Window>
