<Window x:Class="Tenant_Management_System.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tenant_Management_System"
        mc:Ignorable="d"
        Title="LoginPage" Height="450" Width="800">

    <Window.Resources>
        <!-- Drop shadow -->
        <DropShadowEffect x:Key="DropShadow" BlurRadius="10" ShadowDepth="4" Direction="270" Color="#888888" Opacity="0.4"/>

        <!-- Reusable login button style with hover effect -->
        <Style x:Key="LoginButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="#FF984040"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFBA5F5F"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid x:Name="login">
        <Border Width="320"
                Padding="25"
                Background="White"
                CornerRadius="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Effect="{StaticResource DropShadow}"
                Height="369">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch">
                <!-- Login Title -->
                <TextBlock Text="Login"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#FF984040"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Username -->
                <TextBlock x:Name="emailLbl" Text="Email" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#333"/>
                <TextBox x:Name="emailTbx"
                         Height="40"
                         Background="#f5f5f5"
                         BorderBrush="#ccc"
                         BorderThickness="1"
                         Padding="10,0"
                         FontSize="14"
                         Margin="0,0,0,15"
                         VerticalContentAlignment="Center"/>

                <!-- Password -->
                <TextBlock Text="Password" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#333"/>
                <PasswordBox x:Name="passwordTbx"
                             Height="40"
                             Background="#f5f5f5"
                             BorderBrush="#ccc"
                             BorderThickness="1"
                             Padding="10,0"
                             FontSize="14"
                             Margin="0,0,0,25"
                             VerticalContentAlignment="Center"/>

                <!-- Error message -->
                <TextBlock x:Name="loginerrorLbl" Text="Error"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"
                           Foreground="#FFC01616"
                           HorizontalAlignment="Center"/>

                <!-- Login Button -->
                <Button x:Name="loginBtn"
                        Content="Login"
                        Style="{StaticResource LoginButtonStyle}"
                        Click="loginBtn_Click"/>

                <!-- Register link -->
                <TextBlock x:Name="registerLinkTxt"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="15,10,0,0"
                           Foreground="#0078d4"
                           FontWeight="SemiBold"
                           FontSize="14"
                           Cursor="Hand"
                           MouseDown="registerLinkTxt_Click">
                    <Run Text="Don't have an account? Register now!"/>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Window>